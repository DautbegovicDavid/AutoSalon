@model ProizvodjacDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Dodaj" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <input type="file" asp-for="SlikaURL" />
            </div>

            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv proizvođača :</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DrzavaID" class="control-label">Država :</label>
                <select asp-for="DrzavaID" asp-items="Model.Drzave" class="form-control"></select>
                <span asp-validation-for="DrzavaID" class="text-danger"></span>

            </div>


            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Vrati se nazad</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}