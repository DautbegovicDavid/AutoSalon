@model AutomobilUrediVM
@{
    ViewData["Title"] = "Uredi automobil";
}
<div class="d-flex mt-4">
    <div class="w-50">
        <img src="~/images/Automobili/@Model.SlikaURL" class="w-100 h-75 img-thumbnail" />
    </div>
    <div class="ml-5 w-50">
        <form asp-action="Uredi" method="post" class="col-lg-8">
            <input asp-for="AutomobilID" hidden />
            <input asp-for="SlikaURL" hidden />

            <div class="form-group">
                <label asp-for="ProizvodjacID">Proizvođač automobila :</label>
                <select asp-for="ProizvodjacID" asp-items="Model.Proizvodjaci" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Model">Model automobila :</label>
                <input asp-for="Model" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="GodinaProizvodnje">Godina proizvodnje automobila :</label>
                <input asp-for="GodinaProizvodnje" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Boja">Boja automobila :</label>
                <input asp-for="Boja" class="form-control" />
            </div>


            <div class="form-group custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck2" asp-for="Dostupan">
                <label class="custom-control-label" for="customCheck2" asp-for="Dostupan">Dostupan</label>
            </div>
            <div class="form-group custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck1" asp-for="Novo">
                <label class="custom-control-label" for="customCheck1" asp-for="Novo">Novo</label>
            </div>
            <button type="submit" class="btn btn-success">Spremi</button>
        </form>
    </div>
</div>