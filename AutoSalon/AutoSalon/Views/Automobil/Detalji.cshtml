@model AutomobilDetaljiVM
@{
    ViewData["Title"] = "Detalji";
    string xy = Model.div;

}

<dd>
    @Html.HiddenFor(model => model.AutomobilID)
</dd>
<div class="d-flex mt-4 " style="background-color:#c9c9c9;border-radius:3%;box-shadow:rgb(137, 189, 211) 10px 17px 10px" >
    <div class="w-50">
        <dl>
            <dt class="w-100 mt-3 ml-3" style="border-color:white">
                <img src="~/images/Automobili/@Model.SlikaURL" class="img-fluid" style="box-shadow:rgb(137, 189, 211) 10px 17px 10px;border-radius:3%; "/>
            </dt>
           
            <dt class="" style="float:left;margin-top:25%">
                @if (User.IsInRole("Klijent"))
                {

                    <a asp-controller="KupiAutomobil" asp-action="KreirajRezervaciju" asp-route-AutomobilID="@Model.AutomobilID" class="btn tPsS ml-3 mt-3" onclick="sakrijDiv('divDetalji')" style="width:460px;">Rezervisi vozilo</a>
                    <button class="btn mt-3 ml-3" id="xIcon" onclick="sakrijDiv('divDetalji')" style="float:right"></button>
                }
                else {
                <a asp-action="Login" asp-controller="Account" asp-route-korisnik="true"  class="btn tPsS ml-3 mt-3" onclick="sakrijDiv('divDetalji')" style="width:460px;">Login/Registracija</a>
                <button class="btn mt-3 ml-3" id="xIcon" onclick="sakrijDiv('divDetalji')" style="float:right"></button>
                }
            </dt>


        </dl>
    </div>
    
    <div class="ml-5 w-50">
        <div class="container w-100 h-100">
            <div class="row w-100 h-100 kontrast2">


                <div class="col-sm-4">

                    <div>
                        <dt>

                            <label asp-for="Proizvodjac" class="text-white" >Proizvođač: </label>
                        </dt>
                        <dd>
                            <p>@Model.Proizvodjac</p>
                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="GodinaProizvodnje"class="text-white" >Godište: </label>
                        </dt>
                        <dd>
                            <p>@Model.GodinaProizvodnje</p>
                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Gorivo" class="text-white">Gorivo: </label>
                        </dt>
                        <dd>
                            <p>@Model.Gorivo</p>
                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Transmisija" class="text-white">Transmisija: </label>
                        </dt>
                        <dd>
                            <p>@Model.Transmisija</p>
                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Pogon" class="text-white" >Pogon: </label>
                        </dt>
                        <dd>
                            <p>@Model.Pogon</p>
                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Kilovati" class="text-white">Kilovati: </label>
                        </dt>
                        <dd>
                            <p>@Model.Kilovati kW</p>
                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Kilometraza" class="text-white" >Kilometraža: </label>
                        </dt>
                        <dd>
                            <p>@Model.Kilometraza KM</p>
                        </dd>
                    </div>
                </div>


                <div class="col-sm-4">
                    <div>
                        <dt>
                            <label asp-for="Model" class="text-white">Model: </label>
                        </dt>
                        <dd>
                            <p>@Model.Model</p>

                        </dd>
                    </div>
                    <div>
                        <dt>
                            <label asp-for="Boja" class="text-white">Boja: </label>
                        </dt>
                        <dd>
                            <p>@Model.Boja</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="VelicinaFelgi" class="text-white">Veličina felgi: </label>
                        </dt>
                        <dd>
                            <p>@Model.VelicinaFelgi "</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="BrojSjedista" class="text-white">Broj sjedišta: </label>
                        </dt>
                        <dd>
                            <p>@Model.BrojSjedista</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="BrojVrata" class="text-white">Broj vrata: </label>
                        </dt>
                        <dd>
                            <p>@Model.BrojVrata</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Tezina" class="text-white">Težina: </label>
                        </dt>
                        <dd>
                            <p>@Model.Tezina kg</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Kubikaza" class="text-white">Kubikaža: </label>
                        </dt>
                        <dd>
                            <p>@Model.Kubikaza </p>

                        </dd>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div>
                        <dt>
                            <label asp-for="Tip" class="text-white">Tip: </label>
                        </dt>
                        <dd>
                            <p>@Model.Tip</p>

                        </dd>
                    </div>
                    <div>
                        <dt>
                            <label asp-for="EmisioniStandard" class="text-white">Emisioni standard: </label>
                        </dt>
                        <dd>
                            <p>@Model.EmisioniStandard</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Dostupan" class="text-white">Dostupan: </label>
                        </dt>
                        <dd>
                            <p>
                                @{
                                    if (Model.Dostupan == true)
                                    { <span>DA</span>}
                                    else
                                    { <span>NE</span>}
                                }
                            </p>

                        </dd>
                    </div>
                    <div>
                        <dt>
                            <label asp-for="Novo" class="text-white">Novo: </label>
                        </dt>
                        <dd>
                            <p>
                                @{
                                    if (Model.Novo == true)
                                    {<span>DA</span>}
                                    else
                                    { <span> NE </span>}

                                }
                            </p>


                        </dd>
                    </div>
                    <div>
                        <dt>
                            <label asp-for="Cijena" class="text-white">Cijena: </label>
                        </dt>
                        <dd>
                            <p>@Model.Cijena</p>

                        </dd>
                    </div>
                    <div>
                        <dt>
                            <label asp-for="CijenaRentanja" class="text-white">Cijena rentanja: </label>
                        </dt>
                        <dd>
                            <p>@Model.CijenaRentanja</p>

                        </dd>
                    </div>
                    
                </div>
            </div>


        </div>
        @if (User.IsInRole("Administrator") || User.IsInRole("Uposlenik"))
        {
            <a asp-action="Uredi" asp-route-AutomobilID="@Model.AutomobilID" class="btn btn-outline-warning ml-5">Uredi</a>
            <a asp-action="Index" class="float-lg-left btn btn-outline-danger mr-2">Vrati se nazad</a>
        }
        


    </div>
</div>