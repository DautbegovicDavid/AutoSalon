@model AutomobilDetaljiVM
@{
    ViewData["Title"] = "Detalji";
}

<dd>
    @Html.HiddenFor(model => model.AutomobilID)
</dd>
<div class="d-flex mt-4">
    <div class="w-50">
        <dl >
            <dt class="w-100">
                <img src="~/images/Automobili/@Model.SlikaURL" class="img-thumbnail" />
            </dt>
        </dl>
    </div>
    <div class="ml-5 w-50">
        <div class="container w-100 h-100">
            <div class="row w-100 h-100">


                <div class="col-sm-4">

                    <div>
                        <dt>
                            <label asp-for="Proizvodjac" class="text-white">Proizvođač: </label>
