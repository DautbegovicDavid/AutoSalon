                        </dt>
                        <dd>
                            <p>@Model.BrojSjedista</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="BrojVrata" class="text-white">Broj vrata: </label>
                        </dt>
                        <dd>
                            <p>@Model.BrojVrata</p>

                        </dd>
                    </div>

                    <div>
                        <dt>
                            <label asp-for="Tezina" class="text-white">Težina: </label>
