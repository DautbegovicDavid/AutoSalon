@model PoslovnicaUkloniVM
@{
    ViewData["Title"] = "Ukloni";
}

<h2>Ukloni poslovnicu</h2>

<h3>Da li ste sigurni da želite ukloniti poslovnicu ?</h3>

<div class="jumbotron">

    <dl class="dl-horiznotal">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd >
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grad)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Grad)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresa)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Adresa)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KontaktTelefon)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.KontaktTelefon)
        </dd>
    </dl>
    <hr />

    <form asp-action="Ukloni">
        <input type="hidden" asp-for="PoslovnicaID" />
        <div>
            <a asp-action="Index" class="col-lg-2">Vrati se nazad</a>
            <input type="submit" value="Ukloni" class="btn btn-danger" />
        </div>
    </form>
</div>
