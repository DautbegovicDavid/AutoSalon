@using AutoSalon.Models
@model Poslovnica
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj poslovnicu</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Dodaj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Grad" class="control-label"></label>
                <select asp-for="GradID" asp-items="ViewBag.GradID" class="form-control"></select>
                <span asp-validation-for="Grad"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KontaktTelefon" class="control-label"></label>
                <input asp-for="KontaktTelefon" class="form-control" />
                <span asp-validation-for="KontaktTelefon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Vrati se nazad</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

