@model PoslovnicaDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj poslovnicu</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Dodaj" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <input type="file" asp-for="SlikaURL" />
            </div>

            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv poslovnice :</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GradID" class="control-label">Grad :</label>
                <select asp-for="GradID" asp-items="Model.Gradovi" class="form-control"></select>
                <span asp-validation-for="GradID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adresa" class="control-label">Adresa :</label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KontaktTelefon" class="control-label">Kontakt telefon :</label>
                <input asp-for="KontaktTelefon" class="form-control" />
                <span asp-validation-for="KontaktTelefon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Vrati se nazad</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

