@model PoslovnicaUrediVM
@{
    ViewData["Title"] = "Uredi poslovnicu";
}

<h2>Uredi poslovnicu</h2>
<div class="d-flex mt-4">
    <div class="w-50">
        <img src="~/images/Poslovnice/@Model.SlikaUrl" class="w-100 h-75 img-thumbnail"/>
    </div>
    <div class="ml-5 w-50">

        <form asp-action="Uredi" method="post" class="col-lg-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PoslovnicaID" />

            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv poslovnice :</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="GradID" class="control-label">Naziv grada :</label>
                <select asp-for="GradID" asp-items="Model.Gradovi" class="form-control"></select>
                <span asp-validation-for="GradID"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KontaktTelefon" class="control-label">Kontakt telefon :</label>
                <input asp-for="KontaktTelefon" class="form-control" />
                <span asp-validation-for="KontaktTelefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-success" />
            </div>

        </form>

        <div class="col-lg-5">
            <a asp-action="Index">Vrati se nazad</a>
        </div>

        @section Scripts{
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>
