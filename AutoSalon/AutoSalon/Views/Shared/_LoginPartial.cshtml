@using Microsoft.AspNetCore.Identity
@using AutoSalon.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item ">
                <button type="button" class="btn btn-success" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    <span class="badge badge-pill font-weight-bold" data-toggle="popover" id="Notifikacija">0</span>

                </button>
                <div class="collapse position-relative" id="collapseExample">
                    <div class="jumbotron text-info">
                        Nema novih notifikacija
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="ml-2 nav-link font-weight-bold text-success">Pozdrav @UserManager.GetUserName(User) !</a>
            </li>

            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Odjavi se</button>
            </li>
        </ul>

    </form>

}

else
{
    <nav class="navbar navbar-expand-lg navbar-dark bg-warning">

        <ul class="navbar-nav navbar-right">
            <li class="nav-item active"><a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link">Registracija</a></li>
            <li class="nav-item active"><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Prijava</a></li>
        </ul>
    </nav>
}

<script>

    $.ajax({
        url: "@Url.Action("GetBrojNotifikacija", "Notifikacija")",
        type: "GET",
        data: { KorisnikID:@UserManager.GetUserId(User)},
        success: function (result) {
            $("#Notifikacija").html("<span>"+result+"</span>");
        }
    })
</script>